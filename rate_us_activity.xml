<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp"
    tools:context=".RateUsActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/rateUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoying the App?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/rateUsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap on the stars to rate us"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_below="@id/rateUsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- RatingBar -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_below="@id/rateUsSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:progressTint="#FFD700" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>
