<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030404">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Greeting -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to FitIQ!"
                android:textColor="#FF9800"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- CARDIO -->
            <TextView
                android:id="@+id/cardioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnCardio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cardio_image"
                        android:contentDescription="Cardio Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- LEGS -->
            <TextView
                android:id="@+id/legsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legs"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnLegs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/legs_image"
                        android:contentDescription="Leg Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- CHEST -->
            <TextView
                android:id="@+id/chestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnChest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chest_image"
                        android:contentDescription="Chest Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- BACK -->
            <TextView
                android:id="@+id/backText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_image"
                        android:contentDescription="Back Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- SHOULDERS -->
            <TextView
                android:id="@+id/shouldersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnShoulders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shoulders_image"
                        android:contentDescription="Shoulder Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- BICEPS -->
            <TextView
                android:id="@+id/bicepsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biceps"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnBiceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/biceps_image"
                        android:contentDescription="Biceps Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- TRICEPS -->
            <TextView
                android:id="@+id/tricepsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triceps"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#FF6600"
                android:layout_marginBottom="8dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/glow_orange_border"
                android:padding="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:id="@+id/btnTriceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/triceps_image"
                        android:contentDescription="Triceps Exercises" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
